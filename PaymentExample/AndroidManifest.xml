<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paymentexample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.paymentexample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.paymentexample.AddCardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.paymentexample.ListCardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.paymentexample.DeleteCardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.paymentexample.DebitardActivity"
            android:label="@string/app_name" >
        </activity>
    </application>
    
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<!-- This is will enhance the device ID -->
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<!-- pick one of these two for Geo Location (FINE is preferred) -->
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>
